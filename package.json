{
  "name": "ship-maintenance-system",
  "version": "1.0.0",
  "description": "Ship Planned Maintenance System",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "react-start": "react-scripts start",
    "electron-start": "electron .",
    "electron-dev": "nodemon --watch main.js --watch preload.js --exec electron .",
    "dev-all": "concurrently \"npm run react-start\" \"npm run electron-dev\"",
    "postinstall": "electron-builder install-app-deps",
    "start": "concurrently \"npm run react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "dev": "concurrently \"npm run react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "react-scripts build",
    "postbuild": "cp preload.js build/",
    "package": "npm run build && npm run postbuild && electron-builder build --win --publish never",
    "release": "npm run build && npm run postbuild && electron-builder --publish=never",
    "build:win": "npm run build && npm run postbuild && electron-builder --win --x64"
  },
  "build": {
    "appId": "com.ship.maintenance",
    "productName": "Ship Maintenance System",
    "files": [
      "build/**/*",
      "main.js",
      "preload.js",
      "src/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "extraResources": [
      {
        "from": "src/db",
        "to": "src/db",
        "filter": ["**/*"]
      },
      {
        "from": "src/ipc",
        "to": "src/ipc",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  },
  "dependencies": {
    "antd": "^5.14.1",
    "better-sqlite3": "^11.9.1",
    "electron-is-dev": "^2.0.0",
    "moment": "^2.30.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "react-scripts": "5.0.1",
    "tailwindcss": "^3.3.5"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}